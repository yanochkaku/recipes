@using Recipes.Core
@{
    var categories = ViewBag.Categories as IEnumerable<Category>;
}

@model List<InfoDish>
<div class="float-end">
    <a href="/InfoDish/create" class="btn btn-success">Додати рецепт</a>
</div>
<div class="text-center">
    <h3>Каталог кулінарних рецептів</h3>
</div>
<hr />
<br />
<!-- Receipe Post Search -->
<div class="row d-flex justify-content-center">
    <div class="col-md-10 col-lg-9 col-xl-8">
        <div class="card shadow-lg p-3 mb-5 rounded">
            <div class="card-header bg-white">
                <h4 class="mb-1">Пошук рецептів</h4>
                <small class="text-muted"></small>
            </div>

            <form asp-action="Search" method="get">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label style="margin: 0.2em;">Назва</label>
                        <input type="text" class="form-control" name="title" placeholder="Name" required>
                    </div>

                    <div class="col-md-3">
                        <label style="margin: 0.2em;">Складність</label>
                        <input type="text" class="form-control" name="difficulty" placeholder="Name" required>
                    </div>

                    <div class="col-md-3">
                        <label style="margin: 0.2em;">Час приготування</label>
                        <input type="text" class="form-control" name="cookingTime" placeholder="Name" required>
                    </div>               
                    <div class="col-md-1 d-grid gap-2">
                        <label> </label>
                        <button type="submit" class="btn btn-success">Пошук</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<hr />
<br />

 <section class="best-receipe-area">
       <tbody>
        <div class="container row">
            @foreach (var item in Model)
            {
                          <div class="col-12 col-sm-6 col-lg-4">
                            <div class="single-best-receipe-area mb-30">
                                 <img src="@item.IconPath" alt="">
                        <div class="float-end">
                        <a class="btn btn-success" asp-action="Create" asp-controller="Save" asp-route-id="@item.Id">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart" viewBox="0 0 16 16">
                                <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z" />
                            </svg>
                        </a>
                        </div>
                       
                                    <div class="receipe-content">
                                        <a href="receipe-post.html">
                                            <h5 class="card-title">@item.Title</h5>
                                        </a>
                            

                            <br>                            
                                            <div class="ratings">
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star-o" aria-hidden="true"></i>
                                    </div>
                                </div>
                        <br>
                                             <div class="d-flex justify-content-between align-items-center">
                                                <div class="btn-group">
                                                    <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@item.Id">Редагувати</a>
                                                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Деталі</a>
                                                    <a class="btn btn-sm btn-outline-secondary" asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                                                </div>
                                             </div>
                            </div>
                          </div>
            }
        </div>
    </tbody>
 </section>
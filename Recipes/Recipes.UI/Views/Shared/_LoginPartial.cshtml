@using Microsoft.AspNetCore.Identity
@using Recipes.Core
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


   <ul class="navbar-nav">

   
   <input type="search" name="search" placeholder="Пошук...">
   <button type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
            
    @if (SignInManager.IsSignedIn(User))
    {

        <li class="nav-item">
            <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Привіт @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button  type="submit" class="nav-link btn btn-link text-dark">Вийти</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Реєстрація</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Вхід</a>
        </li>
    }
</ul>